<%- include('../partials/browseHeader') %>

<div class="big-container">
  <section class="img-section">
    <div class="img-div">
      <img id="img" src='https://s3.amazonaws.com/images.gearjunkie.com/uploads/2021/01/tension-climbing-grindstone-mk2.jpg'>
      <img id="img" src="https://s3.amazonaws.com/images.gearjunkie.com/uploads/2021/01/beastmaker-hangboards.jpg">
    </div>
  </section>
  <div class="forms">
    <div class="form-container">
      <h2>Create new plan</h2>
      <div class="training-form">
        <form id="new-form" action="/workouts" method="POST">
          <div class="name">
            <label>Regimen name</label>
            <input type="text" name="name">
            <label>Handboard used:</label>
            <select name="boardUsed">
              <option value="Tension Mk2">Tension Mk2</option>
              <option value="Beastmaker 2000">Beastmaker 2000</option>
            </select>
            <label>Intensity</label>
            <select name="intensity">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
            <br>
          <div class="select-all">
              <label>Hold:</label>
              <select name="hold" style="width: 13vmin">
                <option value="choose">Select</option>
                <option value="8mm">8mm</option>
                <option value="10mm">10mm</option>
                <option value="15mm">15mm</option>
                <option value="20mm">20mm</option>
                <option value="25mm">25mm</option>
                <option value="30mm">30mm</option>
                <option value="50mm">50mm</option>
                <option value="jug">Top jug</option>
              </select>

            <label>Grip:</label>
              <select name="grip" style="width: 13vmin">
                <option value="choose">Select</option>
                <option value="Jug">jug</option>
                <option value="Sloper">sloper</option>
                <option value="Pinch">pinch</option>
                <option value="Open-hand">open hand</option>
                <option value="Half-crimp">half crimp</option>
                <option value="Full-crimp">full crimp</option>
              </select>

              <label>Sets:</label>
              <input type="number" min="0" name="set" style="width: 7vmin">
              <label>Reps:</label>
              <input type="number" min="0" name="rep" style="width: 7vmin">
              <label>Hang time (s):</label>
              <input type="number" min="0" name="hTime" style="width: 7vmin">
              <label>Rest (m):</label>
              <input type="number" min="0" name="rTime" style="width: 7vmin">
            
              <br>
              <br>
              <div>
                <input type="submit" value="Add Plan"   class="submit-btn">
              </div>
            </div>
          </div>
        </form>
      </div>
  </div>
</div>

