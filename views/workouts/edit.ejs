<%- include('../partials/browseHeader') %>

  <div class="forms">
    <div class="form-container">
      <h2>Edit <%= workout.name %></h2>
      <div class="training-form">
        <form id="new-form" action="/workouts" method="POST">
          <div class="name">
            <label>Handboard used:</label>
            <input type="text" name="boardUsed">
          </div>
            <br>
          <div class="select-all">
            <div class="mk2-form">
              <label>Hold:</label>
              <select name="hold">
                <option value="choose">Select</option>
                <option value="8mm">8mm</option>
                <option value="10mm">10mm</option>
                <option value="15mm">15mm</option>
                <option value="20mm">20mm</option>
                <option value="25mm">25mm</option>
                <option value="30mm">30mm</option>
                <option value="50mm">50mm</option>
                <option value="jug">Top jug</option>
              </select>

            <label>Grip:</label>
              <select name="grip">
                <option value="choose">Select</option>
                <option value="Jug">jug</option>
                <option value="Sloper">sloper</option>
                <option value="Pinch">pinch</option>
                <option value="Open-hand">open hand</option>
                <option value="Half-crimp">half crimp</option>
                <option value="Full-crimp">full crimp</option>
              </select>

              <label>Sets:</label>
              <input type="number" min="0" name="set" style="width: 7vmin">
              <label>Reps:</label>
              <input type="number" min="0" name="rep" style="width: 7vmin">
              <label>Hang time (s):</label>
              <input type="number" min="0" name="hTime" style="width: 7vmin">
              <label>Rest (m):</label>
              <input type="number" min="0" name="rTime" style="width: 7vmin">
            </div>
            
              <br>
              <br>
              <input type="submit" value="Add Plan">
            </div>
          </div>
        </form>
      </div>
  </div>

<%- include('../partials/footer') %>